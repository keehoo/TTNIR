<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/carName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Car Name here"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/numerRejestracyjny_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carName_id"
        android:hint="Registration Number Here!"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/insuranceDateInTheItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:hint="Data Ubezpieczenia"

        />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/insuranceCountDownNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/insuranceDateInTheItemView"
        app:isHideTimeBackground="true"
        app:isShowDay="true"

        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowTimeBgDivisionLine="true"
        app:isTimeTextBold="false"
        app:suffixDay=":"
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"

        app:suffixTextColor="@color/zolty"
        app:suffixTextSize="12sp"
        app:timeTextColor="@color/bialy"
        app:timeTextSize="18sp" />


    <TextView
        android:id="@+id/technicalDateInTheItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/insuranceCountDownNumber"
        android:hint="Data Przegladu"

        />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/technicalCountDownNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/technicalDateInTheItemView"
        app:isHideTimeBackground="true"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowTimeBgDivisionLine="true"
        app:isTimeTextBold="false"
        app:suffixDay=":"
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:suffixTextColor="@color/zolty"
        app:suffixTextSize="12sp"
        app:timeTextColor="@color/bialy"
        app:timeTextSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/technicalCountDownNumber"
        android:padding="@dimen/activity_horizontal_margin"
        
        />


</RelativeLayout>